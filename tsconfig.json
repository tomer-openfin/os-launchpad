{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "jsx": "react",
    "lib": ["dom", "es2018"],
    "noImplicitAny": false,
    "outDir": "build",
    "paths": {
      "styled-components": ["src/styles/styled-components.ts"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "rootDir": ".",
    "rootDirs": ["src", "stories"]
  },
  "include": ["src/**/*"]
}
